<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roctet_bng"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/updataversion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Update to new version!"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/updataversioncode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="2.0.1"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView

            android:id="@+id/updataversion_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a message!"
            android:textColor="@color/black_hehe"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_sure"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:background="@drawable/updataversionbut_bg"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Got it!"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/quxiao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:src="@drawable/center2x" />
</FrameLayout>